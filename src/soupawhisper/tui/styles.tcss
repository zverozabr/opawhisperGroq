/* SoupaWhisper TUI Styles */

/* Main layout */
Screen {
    layout: vertical;
}

/* TabbedContent must fill remaining space */
TabbedContent {
    height: 1fr;
}

/* TabPane needs explicit height */
TabPane {
    height: 100%;
}

/* ContentSwitcher inside TabbedContent */
ContentSwitcher {
    height: 100%;
}

#main {
    width: 100%;
    height: 100%;
    content-align: center middle;
}
